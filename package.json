{
  "name": "electron-vue-demo",
  "description": "electron-vue-demo",
  "author": "junxi",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "clean": "rm -rf dist/main dist/render",
    "dev:electron": "cross-env NODE_ENV=development electron index.js",
    "tsc:electron": "tsc -p tsconfig.electron.json",
    "build:electron-win": "yarn tsc:electron && electron-builder --win --x64",
    "build:electron-mac": "yarn tsc:electron && electron-builder --mac",
    "build:win": "run-s clean build build:electron-win",
    "build:mac": "run-s clean build build:electron-mac",
    "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx,.vue",
    "preinstall": "node ./scripts/check-yarn.js"
  },
  "dependencies": {
    "@electron/remote": "^1.2.0",
    "ant-design-vue": "^2.1.6",
    "axios": "^0.21.1",
    "cos-js-sdk-v5": "^1.2.7",
    "dayjs": "^1.10.4",
    "js-audio-recorder": "^1.0.7",
    "js-cookie": "^2.2.1",
    "mitt": "^2.1.0",
    "vue": "^3.0.11",
    "vue-router": "^4.0.6",
    "vuedraggable": "^4.0.1",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@types/js-cookie": "^2.2.6",
    "@types/mockjs": "^1.0.3",
    "@types/node": "^14.14.39",
    "@types/qs": "^6.9.6",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "@vitejs/plugin-vue": "^1.1.5",
    "@vue/compiler-sfc": "^3.0.5",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "electron": "^12.0.8",
    "electron-builder": "^22.10.5",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.7.0",
    "less": "^4.1.1",
    "less-loader": "^8.0.0",
    "lint-staged": "^10.5.4",
    "mockjs": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "qs": "^6.10.1",
    "remark": "^13.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "vite": "^2.0.5",
    "vite-plugin-html": "^2.0.3",
    "vite-plugin-style-import": "^0.8.1",
    "vue-eslint-parser": "^7.6.0",
    "vue-tsc": "^0.1.4",
    "yorkie": "^2.0.0"
  },
  "build": {
    "appId": "electron-vue-demo",
    "productName": "electron-vue-demo",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "files": [
      "dist/main/**/*",
      "dist/render/**/*"
    ],
    "directories": {
      "output": "dist/release"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
